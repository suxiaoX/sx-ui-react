{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "workspaces": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "registry": "https://registry.npmjs.org/",
      "ignoreChanges": [
        "*.md"
      ]
    },
    "version": {
      "allowBranch": [
        "main"
      ]
    }
  },
  "changelog": {},
  "ignoreChanges": [
    "**/*.md",
    "**/demos/**",
    "**/docs/**",
    "**/docs-list/**",
    "**/es/**",
    "**/test/**",
    "**/node_modules",
    "**/lerna-debug.log"
  ]
}
