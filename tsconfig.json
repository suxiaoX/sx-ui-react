{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "types": [
      "jest"
    ],
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "paths": {
      "cfc-ui": [
        "packages/index.tsx"
      ],
      "@micfc/*": [
        "packages/*"
      ],
      // "@micfc/button": [
      //   "./packages/button/src/index.tsx"
      // ],
      // "@micfc/alert": [
      //   "./packages/alert/src/index.tsx"
      // ],
      // "@micfc/tag": [
      //   "./packages/tag/src/index.tsx"
      // ]
    }
  },
  "include": [
    "packages/**/*",
    "docs/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    "typings",
    "**/__test__",
    "test",
    "./packages/**/*.md"
  ]
}
